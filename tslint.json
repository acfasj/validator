{
  "extends": ["tslint:recommended"],
  "rules": {
    "semicolon": [ true, "never" ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never"
        },
        "esSpecCompliant": true
      }
    ],
    "quotemark": [true, "single"],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false
  }
}
